                div(class="modal-body")
                    form
                        div(class="form-group")
                            label(for="recipient-name",class="control-label") Recipient:
                            input(type="text",class="form-control",id="recipient-name")
                        div(class="form-group")
                            label(for="message-text",class="control-label") Message:
                            textarea(class="form-control",id="message-text")
                
                div(class="modal-footer")
                    button(type="button",class="btn btn-default waves-effect", data-dismiss="modal") Close
                    button(type="button",class="btn btn-danger waves-effect waves-light") Save changes
        
        button(type="button",class="btn btn-default pull-right",data-toggle="modal",data-target="#responsive-modal") Agregar Documento
    
