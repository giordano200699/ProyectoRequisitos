

extends layout

block content
  
  div(class="preloader")
    div(class="cssload-speeding-wheel")
  
  section#wrapper.login-register
      .login-box.login-sidebar
        .white-box
          form(class="form-horizontal form-material",id="loginform",action="validacion")

            a.text-center.db(href='javascript:void(0)')
              img(src='/plugins/images/admin-logo-dark.png', alt='Home')
              br
              img(src='/plugins/images/admin-text-dark.png', alt='Home')
            |   
            |         
            |         
            .form-group.m-t-40
              .col-xs-12
                input.form-control(type='text', required='true',name='nombreCuenta', placeholder='Administrador')
            |         
            .form-group
              .col-xs-12
                input.form-control(type='password', required='true',name='contrasenia', placeholder='Constrase√±a')
            |         
            .form-group
              .col-md-12
                .checkbox.checkbox-primary.pull-left.p-t-0
                  input#checkbox-signup(type='checkbox')
                  |               
                  label(for='checkbox-signup')  Remember me 
                |             
                a#to-recover.text-dark.pull-right(href='javascript:void(0)')
                  i.fa.fa-lock.m-r-5
                  |  Forgot pwd?
            |         
            .form-group.text-center.m-t-20
              .col-xs-12
                button.btn.btn-info.btn-lg.btn-block.text-uppercase.waves-effect.waves-light(type='submit') Log In
            |         
            .row
              .col-xs-12.col-sm-12.col-md-12.m-t-10.text-center
                .social
                  a.btn.btn-facebook(href='javascript:void(0)', data-toggle='tooltip', title='Login with Facebook')
                    i.fa.fa-facebook(aria-hidden='true')
                  |  
                  a.btn.btn-googleplus(href='javascript:void(0)', data-toggle='tooltip', title='Login with Google')
                    i.fa.fa-google-plus(aria-hidden='true')
            |         
            .form-group.m-b-0
              .col-sm-12.text-center
                p
                  | Don&apos;t have an account? 
                  a.text-primary.m-l-5(href='register2.html')
                    b Sign Up
          |       
          form#recoverform.form-horizontal(action='index.html')
            .form-group
              .col-xs-12
                h3 Recover Password
                |             
                p.text-muted Enter your Email and instructions will be sent to you! 
            |         
            .form-group
              .col-xs-12
                input.form-control(type='text', required='', placeholder='Email')
            |         
            .form-group.text-center.m-t-20
              .col-xs-12
                button.btn.btn-primary.btn-lg.btn-block.text-uppercase.waves-effect.waves-light(type='submit') Reset
